<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark top-nav-collapse">
  <div class="container">

    <!-- Brand -->
    <%= link_to "RoS", roadmaps_path, class: "navbar-brand" %>

    <!-- Collapse -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Links -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <!-- Left -->
      <ul class="navbar-nav mr-auto">
        <li class="nav-item <%= 'active' if @title == 'All Roadmaps' %>">
          <%= link_to roadmaps_path, class: "nav-link" do%>
            Articles
          <% end %>
        </li>
        <li class="nav-item <%= 'active' if @title == 'All users' %>">
          <%= link_to users_path, class: "nav-link" do%>
            Users
          <% end %>
        </li>
      </ul>

      <!-- Right -->
      <ul class="navbar-nav nav-flex-icons">

        <% if user_signed_in? %> <!-- ユーザーがログインしているか -->
          <li class="nav-item">
            <%= link_to current_user.name, user_show_path(current_user), class: 'nav-link border border-light rounded waves-effect waves-light' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, class: 'nav-link' %> <!-- ログイン画面に移行する -->
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: 'nav-link border border-light rounded waves-effect waves-light' %> <!-- 新規登録画面に移行する -->
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
<!-- Navbar -->