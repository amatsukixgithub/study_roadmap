<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, '#' %>
      <%= button_to "Delete", user_delete_path(user), data: { confirm: "Delete #{user.name}\nAre you sure?" }, method: :delete %>
    </li>
  <% end %>
</ul>
