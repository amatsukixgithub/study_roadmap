<% @title = "All users" %>

<div class="container" style="padding-top:7rem">
  <h3 class="h3 text-center mb-5"><i class="fas fa-users light-blue-text"></i> All users</h3>
  <ul class="list-group mt-3">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <%= link_to user.name, user_show_path(user) %>
        <% if current_user.admin?%>
          <%= button_to "Delete", user_delete_path(user), data: { confirm: "Delete #{user.name}\nAre you sure?" }, method: :delete %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>