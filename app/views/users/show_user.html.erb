<% @title = "#{@user.name}\'s Page" %>

<div class="container" style="padding-top:7rem">
  <h3 class="h3 text-center mb-5"><i class="fas fa-user light-blue-text"></i></i> <%= @user.name %>'s page</h3>
  <div>
    <h4><%= current_user.email %></h4>
    <p class="grey-text"><%= @user.comment %></p>
    <div class="text-right">
      <%= link_to "ログアウト", destroy_user_session_path,class: "btn btn-outline-primary btn-rounded waves-effect", method: :delete %>
    </div>
  </div>

  <div>
    <h4>投稿一覧</h4>

    <ul class="list-group mt-3">
      <% @user_roadmap.each do |roadmap| %>
        <li class="list-group-item">
          <%= link_to roadmap_show_path(roadmap), class: "text-dark" do %>
            <i class="fas fa-heart mr-4 pr-3"></i> <%= roadmap.title %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>