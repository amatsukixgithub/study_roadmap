<% @title = "Edit #{resource_name.to_s.humanize}" %>

<div class="container" style="padding-top:7rem">
  <h3 class="h3 text-center mb-5"><i class="fas fa-user-edit light-blue-text"></i> <%= @title %></h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h4>Change Profile</h4>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-4", placeholder: "Name" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-4", placeholder: "Email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_field :comment, autofocus: true, autocomplete: "comment", class: "form-control mb-4", placeholder: "Comment" %>
    </div>

    <div class="field">
      <%= f.label :web_page %><br />
      <%= f.text_field :web_page, autofocus: true, autocomplete: "web_page", class: "form-control mb-4", placeholder: "WebPage" %>
    </div>

    <h4>Change Password</h4>
    <i>(leave blank if you don't want to change it)</i><br /><br />

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-4", placeholder: "New Password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-4", placeholder: "Confirm Password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control mb-4", placeholder: "Current Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-info btn-block" %>
    </div>
  <% end %>

  <br /><br /><br /><br />

  <h3 class="h3 text-center mb-5"><i class="fas fa-user-slash light-blue-text"></i> Delete my account</h3>
  <div class="text-center">
    <p>アカウントを削除します。 <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-blue-grey waves-effect" %></p>
  </div>

</div>